{
  "name": "baseline",
  "version": "3.0.0",
  "description": "baseline web project",
  "main": "index.js",
  "dependencies": {
    "@next/bundle-analyzer": "^8.1.0",
    "barrel-rider": "^1.0.0",
    "copy": "^0.3.2",
    "express": "4.17.0",
    "next": "8.1.0",
    "next-sass": "^1.0.3",
    "node-sass": "4.12.0",
    "path-match": "^1.2.4",
    "react": "^16.8.6",
    "react-dom": "16.8.6",
    "react-router-dom": "^5.0.1",
    "typed-scss-modules": "^0.0.10",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@babel/preset-env": "7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@types/express": "^4.16.1",
    "@types/jest": "24.0.13",
    "@types/luxon": "1.13.0",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "3.1.27",
    "@types/node": "12.0.2",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@zeit/next-sass": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "awesome-typed-sass-modules": "1.2.0",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint-plugin-react-hooks": "^1.5.0",
    "fork-ts-checker-webpack-plugin": "1.3.3",
    "react-testing-library": "7.0.1",
    "serverless": "1.42.3",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-domain-manager": "3.2.2",
    "serverless-http": "^2.0.2",
    "serverless-plugin-common-excludes": "^2.4.0",
    "serverless-plugin-include-dependencies": "^3.2.1",
    "serverless-webpack": "5.3.0",
    "stmux": "^1.6.1",
    "ts-loader": "6.0.1",
    "ts-node": "8.1.0",
    "ts-node-dev": "^1.0.0-pre.32"
  },
  "scripts": {
    "dev": "yarn start",
    "start": "stmux [ [ \"yarn dev-primary\" ] : [ \"yarn dev-secondary\" ] ] -t \"Base - :3007 - Ctrl+a then k to quit\" -e \"[Ff]ail(?!ed\\stests\\.)\" --mouse",
    "dev-primary": "concurrently \"yarn dev-start-api\" \"yarn dev-start-ui\" ",
    "dev-secondary": "concurrently \"yarn sass\" \"yarn sass-common\" \"yarn barreler\" \"yarn barreler-common\" ",
    "dev-start-ui": "yarn ts-node --project common/server/tsconfig.server.json common/server/serverUi.ts",
    "dev-start-api": "yarn ts-node-dev --project common/server/tsconfig.server.json common/server/serverApi.ts",
    "build": "next build",
    "start-prod": "cross-env NODE_ENV=production node dist/index.js",
    "now-build": "next build",
    "now-deploy": "npm run build && now",
    "_deploy": "awsume bushmango && next build && sls deploy",
    "barreler": "yarn barrel-rider --watch -p 5000 ./src-ui ",
    "barreler-common": "yarn barrel-rider --watch -p 5001 ./common",
    "sass": "cd ./src-ui && tsm --watch --nameFormat camel --exportType default './**/*.scss'",
    "sass-common": "cd ./common/components && tsm --watch --nameFormat camel --exportType default './**/*.scss'",
    "deploy": "cd ./common/bin/ && ts-node deploy.ts",
    "test": "jest -w 1",
    "dev-test": "jest --watch",
    "prettier-check": "prettier --check \"**/*.ts\"",
    "prettier-format": "prettier \"**/*.ts\" --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bushmango/baseline.git"
  },
  "author": "steve bushman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bushmango/baseline/issues"
  },
  "homepage": "https://github.com/bushmango/baseline#readme"
}

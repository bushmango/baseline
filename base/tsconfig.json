{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es2015", "es2016"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@common/*": ["common/*"],
      "@lib/*": ["common/lib/*"],
      "@ui/*": ["src-ui/*"],
      "@pages/*": ["src-ui/pages/*"],
      "@state/*": ["src-ui/state/*"],
      "@theme/*": ["src-ui/theme/*"],
      "@config/*": ["src-config/*"]
    }
  }
}
